<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <description>Minor changes to the Description on the task</description>
    <formulas>
        <name>Description</name>
        <dataType>String</dataType>
        <expression>&apos;In 14 days, all new cases and appointments against this account will get blocked by the system. Please create a new charge record, and charge period if appropriate, to ensure that users can continue to use the system for &apos; + TEXT({!$Record.Type__c}) + &apos; appointments.&apos;</expression>
    </formulas>
    <formulas>
        <name>ReminderDateTime</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE(TEXT(YEAR(TODAY()+1)) + &quot;-&quot; + TEXT(MONTH(TODAY()+1)) + &quot;-&quot; + TEXT(DAY(TODAY()+1)) + &quot; &quot; + &quot;13:00:00&quot;)</expression>
    </formulas>
    <formulas>
        <name>TaskSubject</name>
        <dataType>String</dataType>
        <expression>{!$Record.Name} + &apos; will expire in 14 days!&apos;</expression>
    </formulas>
    <formulas>
        <name>TODAY_PLUS_14</name>
        <dataType>DateTime</dataType>
        <expression>NOW()+14</expression>
    </formulas>
    <interviewLabel>Charge Reminder Scheduled Flow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Charge Reminder Scheduled Flow</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <description>Creates a task against the account owner, requesting new charge records be created</description>
        <name>Create_Task</name>
        <label>Create Task</label>
        <locationX>213</locationX>
        <locationY>316</locationY>
        <inputAssignments>
            <field>ActivityDate</field>
            <value>
                <elementReference>TODAY_PLUS_14</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Description</field>
            <value>
                <elementReference>Description</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>IsRecurrence</field>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>IsReminderSet</field>
