    </recordCreates>
    <start>
        <locationX>87</locationX>
        <locationY>54</locationY>
        <connector>
            <targetReference>Create_Task</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Days_Until_Expiry__c</field>
            <operator>EqualTo</operator>
