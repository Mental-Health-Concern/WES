<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Risk_Record</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
TEXT(Case__r.WAW_Displaying_Risk_on_First_Contact__c) = &apos;Yes&apos;,
TEXT(Outcome__c) != &apos;&apos;,
