<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Status__c</field>
        <field>Type__c</field>
        <field>Number_of_Requested_Sessions__c</field>
        <field>Supporting_Comments__c</field>
        <field>Case__c</field>
        <field>Date_Time_Opened__c</field>
        <field>Date_Time_Cancelled__c</field>
        <field>Date_Time_Closed__c</field>
        <field>Cancellation_Reason__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Email_Alert</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Service_Manager_Step</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Contract_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Authorisation__c.Status__c</field>
                <operation>equals</operation>
                <value>Submitted</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Update Status - Service Manager Step</label>
        <name>Update_Status_Service_Manager_Step</name>
        <rejectionActions>
            <action>
                <name>Approval_Request_Denied_Contract_Manager</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Contract_Manager_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Authorisation_Received_Email</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Mark_as_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Contract_Approver_User__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Authorisation__c.Status__c</field>
                <operation>equals</operation>
                <value>Initial Approval - Service Manager</value>
            </criteriaItems>
        </entryCriteria>
        <label>Contract Sign Off</label>
        <name>Contract_Sign_Off</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval process for authorisation</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>true</formula>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Initial_Email</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>2 Wellbeing At Work Authorisation</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
