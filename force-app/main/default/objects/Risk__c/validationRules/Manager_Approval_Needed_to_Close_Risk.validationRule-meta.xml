<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Manager_Approval_Needed_to_Close_Risk</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT(ISBLANK( Date_of_Manager_Sign_Off__c )),
ISBLANK(  Manager_Sign_Off_at_EOC_Closure__c  )
)</errorConditionFormula>
    <errorDisplayField>Reviewing_Manager__c</errorDisplayField>
    <errorMessage>The name of the Manager signing of the risk must be recorded to save the record</errorMessage>
</ValidationRule>
