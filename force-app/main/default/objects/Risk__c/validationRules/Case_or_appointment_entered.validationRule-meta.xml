<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_or_appointment_entered</fullName>
    <active>true</active>
    <description>Ensures that either case or appointment have been entered</description>
    <errorConditionFormula>AND(
Case__c = &apos;&apos;,
Appointment__c = &apos;&apos;)&amp;&amp; $Setup.rh2__PS_Settings__c.rh2__Run_Validation_Rule__c</errorConditionFormula>
    <errorMessage>You must specify a related case or appointment</errorMessage>
</ValidationRule>
