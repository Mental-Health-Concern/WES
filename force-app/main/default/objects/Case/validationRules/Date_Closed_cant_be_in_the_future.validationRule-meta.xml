<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_Closed_cant_be_in_the_future</fullName>
    <active>true</active>
    <description>Date Closed cannot be in the future</description>
    <errorConditionFormula>DATEVALUE(ClosedDate) &gt; today()
&amp;&amp; $Setup.rh2__PS_Settings__c.rh2__Run_Validation_Rule__c</errorConditionFormula>
    <errorDisplayField>ClosedDate</errorDisplayField>
    <errorMessage>Date Closed cannot be in the future</errorMessage>
</ValidationRule>
