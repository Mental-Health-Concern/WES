<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>GAD7_not_added_when_declined</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  OR(
    
      NOT(ISBLANK(TEXT(GAD7_Feeling_nervous_anxious_or_on_edge__c))),
      NOT(ISBLANK(TEXT(GAD7_Not_being_able_to_stop_or_control__c))),
      NOT(ISBLANK(TEXT(GAD7_Worrying_too_much_about_different__c))),
      NOT(ISBLANK(TEXT(GAD7_Trouble_relaxing__c))),
      NOT(ISBLANK(TEXT(GAD7_Becoming_easily_annoyed__c))),
      NOT(ISBLANK(TEXT(GAD7_Feeling_afraid_as_if_something__c)))
    
  ),
  Questionnaire_Declined__c = TRUE,
  RecordType.Name = &apos;GAD7&apos;
)</errorConditionFormula>
    <errorMessage>Please remove answers for questions when questionnaire is declined.</errorMessage>
</ValidationRule>
